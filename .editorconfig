# .editorconfig â€” OpenSettle (modern, 2025)
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
indent_style = space
indent_size = 4

########################################
# C# Code Style Rules
########################################

# Prefer var when type is obvious
csharp_style_var_for_built_in_types = false
csharp_style_var_when_type_is_apparent = true
csharp_style_var_elsewhere = false

# Expression preferences
csharp_prefer_simple_using_statement = true
csharp_prefer_braces = true
csharp_style_namespace_declarations = file_scoped

# Pattern matching
csharp_style_pattern_matching_over_is_with_cast_check = true
csharp_style_pattern_matching_over_as_with_null_check = true

########################################
# .NET Code Style Rules
########################################

# this. preferences
dotnet_style_qualification_for_field = false
dotnet_style_qualification_for_property = false
dotnet_style_qualification_for_method = false
dotnet_style_qualification_for_event = false

# Language keywords vs BCL types
dotnet_style_predefined_type_for_locals_parameters_members = true
dotnet_style_predefined_type_for_member_access = true

########################################
# Naming Conventions
########################################

# Private fields with underscore prefix
dotnet_naming_rule.private_fields_with_underscore.severity = suggestion
dotnet_naming_rule.private_fields_with_underscore.symbols = private_fields
dotnet_naming_rule.private_fields_with_underscore.style = underscore_prefix

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

dotnet_naming_style.underscore_prefix.capitalization = camel_case
dotnet_naming_style.underscore_prefix.required_prefix = _

########################################
# Analyzer Rules
########################################

# IDE rules
dotnet_diagnostic.IDE0005.severity = warning  # Remove unnecessary usings
dotnet_diagnostic.IDE0058.severity = warning  # Expression value never used
dotnet_diagnostic.IDE0007.severity = suggestion # Use var
dotnet_diagnostic.IDE0008.severity = suggestion # Use explicit type

# CA rules (most important ones)
dotnet_diagnostic.CA1707.severity = none      # Remove underscores from member names (conflicts with test naming)
dotnet_diagnostic.CA2007.severity = none      # Consider calling ConfigureAwait (not needed in tests/console apps)

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[tests/**/*.cs]
dotnet_diagnostic.IDE0058.severity = none
